<?xml version="1.0"?>
<config>
    <sections>
    	<catalog>
    		<groups>
    			<hc_theme_product_related>
    				<label>Random produtos relacionados</label>
    				<sort_order>99</sort_order>
    				<show_in_default>1</show_in_default>
                     <show_in_website>1</show_in_website>
                     <show_in_store>1</show_in_store>

	                    <fields>

	                    	<hc_theme_attribute translate="label">
	                        	<label>Atributos</label>
	                        	<frontend_type>text</frontend_type>
	                        	<sort_order>1</sort_order>
	                            <show_in_default>1</show_in_default>
	                            <show_in_website>1</show_in_website>
	                            <show_in_store>1</show_in_store>
	                            <comment>Informe os atributos na ordem que deseja que o módulo pesquisa</comment>
	                        </hc_theme_attribute>

	                        <hc_theme_products_size translate="label">
	                        	<label>Quantidades de produtos do slider</label>
	                        	<frontend_type>text</frontend_type>
	                        	<sort_order>1</sort_order>
	                            <show_in_default>1</show_in_default>
	                            <show_in_website>1</show_in_website>
	                            <show_in_store>1</show_in_store>
	                            <comment>Informe a quantidade de produtos que deseja que apareça no slider</comment>
	                        </hc_theme_products_size>

	                        <hc_theme_enabled  translate="label">
	                            <label>Habilitar produtos relacionados randomico</label>
	                            <frontend_type>select</frontend_type>
	                            <source_model>adminhtml/system_config_source_yesno</source_model>
	                            <sort_order>1</sort_order>
	                            <show_in_default>1</show_in_default>
	                            <show_in_website>1</show_in_website>
	                            <show_in_store>1</show_in_store>
	                        </hc_theme_enabled>


	                    </fields>

    			</hc_theme_product_related>
    		</groups>

	    </catalog>

    </sections>
</config>
